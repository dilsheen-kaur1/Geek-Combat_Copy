<%- include('../layouts/header.ejs')%>

<div id="wrapper">
    <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">

        <a class="sidebar-brand d-flex align-items-center justify-content-center" href="/mentorHome">
            <div class="sidebar-brand-text mx-3">To The New</div>
        </a>

        <hr class="sidebar-divider my-0">

        <li class="nav-item active">
            <% if(user.is_admin===1){
                %>
                    <a class="nav-link" href="/admin/home">
                        <i class="fas fa-fw fa-tachometer-alt"></i>
                        <span>Dashboard</span></a><%
                }
                else if(user.is_Mentor===1){
                        %><a class="nav-link" href="/mentorHome">
                            <i class="fas fa-fw fa-tachometer-alt"></i>
                            <span>Dashboard</span></a><%
                }
                else{
                            %>
                    <a class="nav-link" href="/home">
                        <i class="fas fa-fw fa-tachometer-alt"></i>
                        <span>Dashboard</span></a><%
                }
                    
                %>
        </li>

        <hr class="sidebar-divider d-none d-md-block">

    </ul>

    <div class="d-flex flex-column w-100">
        <div id="content-wrapper" class="d-flex flex-column h-100">

            <div id="content">
    
                <div class="container-fluid mt-5 w-75">
    
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Add Feedback</h6>
                        </div>
                        <div class="card-body">
                            <form class="user" action="" method="POST">
                                <div class="form-group">
                                    <input type="text" class="form-control form-control-user"
                                        id="exampleInputTopic" aria-describedby="topic" "
                                        placeholder="Enter Topic..." required name="topic">
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control form-control-user"
                                        id="exampleInputDesc" placeholder="Enter Feedback..." required name="desc">
                                </div>
                                <input type="hidden" name="id" value="<%= users._id%>">
                                <div class="form-group">
                                    <input type="number" class="form-control form-control-user"
                                        id="exampleInputMarks" placeholder="Enter Marks..." required name="marks">
                                </div>
    
                                <input type = "submit" value="Add" class="btn btn-primary btn-user btn-blockr" style="width: 100%;">
                            </form>
                        </div>
                    </div>
    
                </div>
    
            </div>
    
        </div>
        <%- include('../layouts/footer.ejs')%>
    </div>
</div>